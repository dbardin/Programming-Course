public class Java_homeBin3 {
    public static void main(String[] args) { 
    System.out.print( "Enter any number: " ) ; 
        Scanner scan = new Scanner(System.in) ; 
        int n = scan.nextInt() ; 
        if ( n%2==0 ) {
            System.out.println("The number" +n+ " is even") ;
        }//The number is even if dividing this number by 2 independent balance 0
     else {
            System.out.println("The number" +n+ " is not even") ;
        }//Or number is not even if division two as a number without a leading zero balance 
    
    }
    
}
